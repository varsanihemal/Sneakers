<% @products.each do |product| %>
  <div class="product">
    <%= link_to product.name, product_path(product) %>
    <% if product.image.attached? %>
      <%= image_tag product.image %>
    <% else %>
      <p>No image available</p>
    <% end %>
    <p><%= number_to_currency(product.price) %></p>
  </div>
<% end %>
