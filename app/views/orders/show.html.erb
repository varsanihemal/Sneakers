<h1 class="mb-4">Order #<%= @order.id %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="invoice p-4 mb-4 border rounded">
        <h4 class="mb-4">Invoice</h4>

        <ul class="list-group mb-4">
          <% @order.order_items.each do |item| %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span><%= item.product.name %></span>
                <span><%= number_to_currency(item.price_at_purchase) %> x <%= item.quantity %></span>
              </div>
            </li>
          <% end %>
        </ul>

        <div class="row mb-3">
          <div class="col-sm-6">
            <p><strong>Subtotal:</strong> <%= number_to_currency(@order.subtotal) %></p>
            <p><strong>GST:</strong> <%= number_to_currency(@order.gst) %></p>
            <p><strong>PST:</strong> <%= number_to_currency(@order.pst) %></p>
            <p><strong>HST:</strong> <%= number_to_currency(@order.hst) %></p>
          </div>
          <div class="col-sm-6 text-end">
            <p class="h4 mb-0"><strong>Total:</strong> <%= number_to_currency(@order.total_amount) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mb-4">
    <%= link_to 'Back to Orders', orders_path, class: 'btn btn-primary' %>
  </div>
</div>
