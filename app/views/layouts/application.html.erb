<!DOCTYPE html>
<html>
<head>
  <title>Sneakers</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag 'custom' %> <!-- Link to your custom CSS file -->
</head>
<body>
  <header>
    <div class="container">
      <div class="left">
        <div class="logo">
          <%= link_to root_path do %>
          <%= image_tag 'logo.svg', alt: 'Logo' %>
        <% end %>
        </div>
        <nav>
          <ul>
            <!-- Dropdown for Categories -->
            <ul>
              <li class="dropdown">
               <a href="#" class="dropdown-toggle">Categories</a>
                <ul class="dropdown-menu">
                <% Category.all.each do |category| %>
                  <li><%= link_to category.name, category_path(category) %></li>
                <% end %>
            </li>
              </ul>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
          </ul>
        </nav>
      </div>
      <div class="user-menu">
        <% if user_signed_in? %>
          <%= link_to "Cart", cart_path, class: "cart-link" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "logout-link" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "login-link" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "signup-link" %>
        <% end %>
      </div>
    </div>
  </header>

  <%= yield %>

</body>
</html>
