<h1 class="mb-4 text-center">Order #<%= @order.id %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="invoice p-4 mb-4 border rounded bg-light shadow-sm">
        <h4 class="mb-4 text-primary">Invoice</h4>

        <ul class="list-group mb-4">
          <% @order.order_items.each do |item| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= item.product.name %></span>
              <span><%= number_to_currency(item.price_at_purchase) %> x <%= item.quantity %></span>
            </li>
          <% end %>
        </ul>

        <div class="row mb-3">
          <div class="col-sm-6">
            <p><strong>Subtotal:</strong> <%= number_to_currency(@order.subtotal) %></p>
            <p><strong>GST:</strong> <%= number_to_currency(@order.gst) %></p>
            <p><strong>PST:</strong> <%= number_to_currency(@order.pst) %></p>
            <p><strong>HST:</strong> <%= number_to_currency(@order.hst) %></p>
          </div>
          <div class="col-sm-6 text-end">
            <p class="h4 mb-0 text-danger"><strong>Total:</strong> <%= number_to_currency(@order.total_amount) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mb-4">
    <%= link_to 'Back to Orders', orders_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>
