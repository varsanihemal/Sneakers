<h1>My Orders</h1>

<% if @orders.any? %>
  <ul>
    <% @orders.each do |order| %>
      <li>
        <%= link_to "Order ##{order.id}", order_path(order) %> - 
        <%= number_to_currency(order.total_amount) %> - 
        <%= order.created_at.strftime("%B %d, %Y") %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no orders yet.</p>
<% end %>
